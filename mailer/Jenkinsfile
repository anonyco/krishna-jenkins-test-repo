pipeline {
    agent {
    dockerfile {
        filename 'Dockerfile'
        dir 'mailer'
    }
    }
    environment {
        MAIL_CONFIG = credentials('smtp')
    }
    stages {
        stage('build') {
            steps {
dir('mailer') {
                script {
                    sh "./mailer.sh ${env.MAIL_CONFIG}"
                }
}
            }
        }
    }
}

